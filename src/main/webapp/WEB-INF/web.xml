<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <description>NWIS-RA Timeseries - User Interface</description>
    <display-name>NWIS-RA Timeseries</display-name>
    <session-config>
        <session-timeout>
			30
		</session-timeout>
    </session-config>
	
	<servlet>
		<servlet-name>NwisRaProxy</servlet-name>
		<servlet-class>gov.usgs.cida.proxy.AlternateProxyServlet</servlet-class>
		<init-param>
			<param-name>forward-url-param</param-name>
			<param-value>nwis-ra.service.url</param-value>
		</init-param>
		<init-param>
			<param-name>ignore-client-authorization</param-name>
			<param-value>false</param-value>
		</init-param>
		<init-param>
			<param-name>ignore-server-authorization</param-name>
			<param-value>false</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>NwisRaProxy</servlet-name>
		<url-pattern>/service/nwisra/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AquariusRaProxy</servlet-name>
		<servlet-class>gov.usgs.cida.proxy.AlternateProxyServlet</servlet-class>
		<init-param>
			<param-name>forward-url-param</param-name>
			<param-value>aquarius.service.endpoint</param-value>
		</init-param>
		<init-param>
			<param-name>ignore-client-authorization</param-name>
			<param-value>false</param-value>
		</init-param>
		<init-param>
			<param-name>ignore-server-authorization</param-name>
			<param-value>false</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>AquariusRaProxy</servlet-name>
		<url-pattern>/service/aquarius/*</url-pattern>
	</servlet-mapping>
    
    <security-constraint>
		<web-resource-collection>
			<web-resource-name>Entire Application</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
